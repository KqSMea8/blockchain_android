<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.RecommendFragment">

   <RelativeLayout
       android:id="@+id/rl_title"
       android:layout_marginTop="5dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_marginTop="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           android:orientation="horizontal">
           <LinearLayout
               android:id="@+id/ll_recommend"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <TextView
                   android:id="@+id/tv_recommend"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:textStyle="bold"
                   android:textColor="@color/text_color_dark_black"
                   android:textSize="16sp"
                   android:text="推荐"/>
               <ImageView
                   android:layout_marginTop="1dp"
                   android:id="@+id/iv_recommend"
                   android:layout_gravity="center_horizontal"
                   android:layout_width="30dp"
                   android:src="@mipmap/bottom_black"
                   android:layout_height="3dp"/>
           </LinearLayout>
           <LinearLayout
               android:id="@+id/ll_hot"
               android:layout_marginLeft="20dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <TextView
                   android:id="@+id/tv_hot"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:textStyle="bold"
                   android:textColor="@color/text_color_gray"
                   android:textSize="16sp"
                   android:text="热门"/>
               <ImageView
                   android:layout_marginTop="1dp"
                   android:id="@+id/iv_hot"
                   android:layout_width="30dp"
                   android:layout_gravity="center_horizontal"
                   android:src="@mipmap/bottom_white"
                   android:layout_height="3dp"/>
           </LinearLayout>
       </LinearLayout>
       <ImageView
           android:id="@+id/iv_search"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="@dimen/activity_common_left_magging"
           android:layout_width="22dp"
           android:src="@mipmap/search_black_bold"
           android:layout_height="22dp" />
   </RelativeLayout>
    <!--<android.support.v4.view.ViewPager-->
        <!--android:id="@+id/viewpager"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"/>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.blockchain.shortvideoplayer.widget.video.VerticalViewPager
            android:id="@+id/vvp_back_play"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.blockchain.shortvideoplayer.widget.pulltorefresh.PullToRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/gv_videos"
            android:layout_width="match_parent"
            android:horizontalSpacing="2dp"
            android:layout_marginTop="10dp"
            android:numColumns="2"
            android:verticalSpacing="2dp"
            android:layout_height="match_parent"/>
        </com.blockchain.shortvideoplayer.widget.pulltorefresh.PullToRefreshLayout>
    </RelativeLayout>
</LinearLayout>
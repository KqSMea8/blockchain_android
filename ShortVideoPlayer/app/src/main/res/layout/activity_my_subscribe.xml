<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MySubscribeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/activity_common_top_magging"
        android:layout_marginRight="@dimen/activity_common_right_magging"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/iv_back_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_black"/>
        <TextView
            android:layout_width="wrap_content"
            android:text=""
            android:textColor="@color/text_color_black"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/activity_common_title_size"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="编辑"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/my_subscribe_big_font"
            android:textColor="@color/text_color_light_blue"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_common_top_magging"
        android:layout_marginLeft="@dimen/activity_common_left_magging"
        android:layout_marginRight="@dimen/activity_common_right_magging"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:text="我的类别："
            android:textSize="@dimen/my_subscribe_big_font"
            android:textColor="@color/text_color_black"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="（点击编辑即可管理）"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/text_font_little_size"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>
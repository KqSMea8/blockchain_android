<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.RecommendFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/actitity_common_height"
    android:layout_marginLeft="@dimen/activity_common_left_magging"
    android:layout_marginRight="@dimen/activity_common_right_magging"
    android:orientation="horizontal">
   <TextView
       android:id="@+id/tv_hot"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_vertical"
       android:textSize="@dimen/text_size_large"
       android:textColor="@color/text_color_light_blue"
       android:text="热门"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <RelativeLayout
        android:id="@+id/rl_add"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="30dp"
            android:src="@mipmap/round_gray_background"
            android:layout_centerInParent="true"
            android:layout_height="20dp" />
        <ImageView
            android:layout_width="10dp"
            android:src="@mipmap/add_black"
            android:layout_centerInParent="true"
            android:layout_height="10dp" />
    </RelativeLayout>
</LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv_videos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.blockchain.shortvideoplayer.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/transparent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_image"
            android:layout_width="50dp"
            android:background="@drawable/blue_line_round_shape"
            android:layout_height="50dp">
            <com.blockchain.shortvideoplayer.widget.XCRoundRectImageView
                android:id="@+id/iv_thumbnail"
                android:scaleType="centerCrop"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_color_blue"
            android:layout_gravity="center_horizontal"
            android:text="美食"/>
    </LinearLayout>
</com.blockchain.shortvideoplayer.widget.SquareLayout>

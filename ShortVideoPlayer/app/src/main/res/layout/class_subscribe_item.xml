<?xml version="1.0" encoding="utf-8"?>
<com.blockchain.shortvideoplayer.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/gray_rectangle_white_shape"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <com.blockchain.shortvideoplayer.widget.XCRoundRectImageView
            android:id="@+id/iv_thumbnail"
            android:scaleType="centerCrop"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_color_black"
            android:layout_gravity="center_horizontal"
            android:text="美食"/>
        <CheckBox
            android:id="@+id/cb_select"
            android:layout_width="16dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_height="16dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:background="@drawable/mycheckboxselector"
            android:button="@null"
            android:checked="false" />
    </LinearLayout>
</com.blockchain.shortvideoplayer.widget.SquareLayout>

<?xml version="1.0" encoding="utf-8"?>
<com.blockchain.shortvideoplayer.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <com.blockchain.shortvideoplayer.widget.XCRoundRectImageView
            android:id="@+id/iv_thumbnail"
            android:scaleType="centerCrop"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_color_black"
            android:layout_gravity="center_horizontal"
            android:text="美食"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/LineGrayColor"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/LineGrayColor"
        android:layout_alignParentRight="true"/>
</com.blockchain.shortvideoplayer.widget.SquareLayout>

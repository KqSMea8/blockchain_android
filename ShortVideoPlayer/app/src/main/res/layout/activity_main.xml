<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rg_content">

    </android.support.v4.view.ViewPager>
<ImageView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/LineGrayColor"
    android:layout_above="@+id/rg_content"/>
    <RadioGroup
        android:id="@+id/rg_content"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/rb_recommend_installment"
            android:text="推荐"
            android:drawableTop="@drawable/tab_recommend_bg"
            style="@style/main_tab_style"
            android:checked="true"
            android:gravity="center"/>
        <RadioButton
            android:id="@+id/rb_discover_installment"
            android:drawableTop="@drawable/tab_discover_bg"
            android:text="发现"
            style="@style/main_tab_style"
            android:gravity="center"/>

        <RadioButton
            android:id="@+id/rb_subscribe_installment"
            style="@style/main_tab_style"
            android:drawableTop="@drawable/tab_subscribe_bg"
            android:text="订阅"
            android:gravity="center"/>

        <RadioButton
            android:id="@+id/rb_mine_installment"
            style="@style/main_tab_style"
            android:drawableTop="@drawable/tab_mine_bg"
            android:text="我的"
            android:gravity="center"
            />

    </RadioGroup>


</RelativeLayout>
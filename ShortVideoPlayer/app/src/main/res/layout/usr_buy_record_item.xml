<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_source"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="购买vip会员"
        android:textColor="@color/text_color_light_gray"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_source"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:text="2018-08-04 20:20:35"
        android:textColor="@color/text_color_light_gray" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/activity_common_top_magging"
        android:paddingBottom="10dp"
        android:text="¥15"
        android:textColor="@color/background_blue"
        android:textSize="17sp" />
</RelativeLayout>

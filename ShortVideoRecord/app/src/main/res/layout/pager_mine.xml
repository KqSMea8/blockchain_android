<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/grayBackground"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_banner"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="160dp"
            android:src="@drawable/defaul_banner"/>
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:src="@mipmap/back_white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/ll_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_message"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/message"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="消息"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_white_shape"
            android:layout_marginLeft="@dimen/activity_common_left_magging"
            android:layout_marginRight="@dimen/activity_common_right_magging"
            android:layout_marginTop="100dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/activity_common_top_magging"
                android:layout_marginLeft="@dimen/activity_common_left_magging"
                android:layout_marginRight="@dimen/activity_common_right_magging"
                android:layout_height="wrap_content">
                <com.blochchain.shortvideorecord.widget.CircleImageView
                    android:layout_width="65dp"
                    android:id="@+id/iv_head"
                    android:src="@mipmap/head"
                    android:layout_height="65dp" />
                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_head"
                    android:layout_marginLeft="@dimen/activity_common_left_magging"
                    android:maxLength="8"
                    android:ellipsize="end"
                    android:textSize="17sp"
                    android:textColor="@color/text_color_black"
                    android:text=""/>
                <ImageView
                    android:id="@+id/iv_sex"
                    android:layout_below="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/iv_head"
                    android:layout_marginLeft="@dimen/activity_common_left_magging"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/female"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/iv_sex"
                    android:layout_toRightOf="@+id/iv_head"
                    android:layout_marginLeft="@dimen/activity_common_left_magging"
                    android:lines="1"
                    android:id="@+id/tv_describe"
                    android:textColor="@color/text_color_gray"
                    android:text="来一句地表最强的自我介绍吧"/>
                <LinearLayout
                    android:id="@+id/ll_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_common_right_magging"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_setting"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/setting"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="12sp"
                        android:textColor="@color/text_color_gray"
                        android:text="设置"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="粉丝"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/text_color_gray"/>
                    <TextView
                        android:id="@+id/tv_fans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_light_blue"
                        android:layout_gravity="center_horizontal"
                        android:text=""
                        android:textSize="20sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="收藏"
                        android:textColor="@color/text_color_gray"/>
                    <TextView
                        android:id="@+id/tv_collection"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_light_blue"
                        android:text=""
                        android:textSize="20sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="被赞"
                        android:textColor="@color/text_color_gray"/>
                    <TextView
                        android:id="@+id/tv_praise"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_light_blue"
                        android:text=""
                        android:textSize="20sp"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:layout_height="20dp"
            android:background="@drawable/blue_circle_gray_shape"
            android:textColor="@color/text_color_blue"
            android:text="VIP1"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_common_left_magging"
        android:layout_marginRight="@dimen/activity_common_right_magging"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_media_authentication"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_white_shape"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/mine_media_authentication"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                android:text="媒体认证"
                android:textColor="@color/text_color_black"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_help_center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rectangle_white_shape"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/mine_help"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                android:text="帮助中心"
                android:textColor="@color/text_color_black"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
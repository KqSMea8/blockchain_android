<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/actitity_common_height"
        android:gravity="center_vertical"
        android:textColor="@color/text_color_light_black"
        android:layout_marginLeft="@dimen/activity_common_left_magging"
        android:text="提现-"
        android:id="@+id/tv_bank"/>
    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_common_right_magging"
        android:src="@mipmap/arrow_right"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_height="@dimen/actitity_common_height"
        android:layout_toLeftOf="@+id/iv_right"
        android:textColor="@color/background_dark_blue"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text=""
        android:id="@+id/tv_money"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_common_left_magging"
        android:id="@+id/tv_time"
        android:layout_below="@+id/tv_bank"
        android:textColor="@color/text_color_gray"
        android:paddingBottom="5dp"
        android:text=""/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_state"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_below="@+id/tv_money"
        android:textColor="@color/text_color_gray"
        android:text="提现成功"/>
</RelativeLayout>

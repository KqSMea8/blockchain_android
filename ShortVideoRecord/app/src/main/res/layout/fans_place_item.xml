<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/actitity_common_height"
        android:gravity="center_vertical"
        android:textColor="@color/text_color_light_black"
        android:layout_marginLeft="@dimen/activity_common_left_magging"
        android:text="1 北京"
        android:id="@+id/tv_place"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginRight="@dimen/activity_common_right_magging"
        android:layout_height="@dimen/actitity_common_height"
        android:layout_alignParentRight="true"
        android:textColor="@color/text_color_light_black"
        android:gravity="center_vertical"
        android:text="22%"
        android:id="@+id/tv_ratio"/>
</RelativeLayout>

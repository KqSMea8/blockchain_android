<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="250dp"/>
    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/iv_pic"
        android:layout_marginRight="@dimen/activity_common_right_magging"
        android:paddingBottom="@dimen/activity_common_bottom_magging"
        android:textColor="@color/white"
        android:text=""/>
    <TextView
        android:id="@+id/tv_amount_title"
        android:layout_below="@+id/iv_pic"
        android:layout_marginTop="@dimen/activity_common_top_magging"
        android:layout_marginLeft="@dimen/activity_common_left_magging"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_gray"
        android:text="播放量："/>
    <TextView
        android:id="@+id/tv_play_amount"
        android:layout_toRightOf="@+id/tv_amount_title"
        android:layout_below="@+id/iv_pic"
        android:layout_marginTop="@dimen/activity_common_top_magging"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/background_dark_blue"
        android:text=""/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/iv_pic"
        android:layout_marginTop="@dimen/activity_common_top_magging"
        android:text=""
        android:textColor="@color/text_color_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
